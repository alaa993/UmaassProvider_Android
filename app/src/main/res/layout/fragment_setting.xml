<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_color"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/toolbar_color"
            android:elevation="@dimen/toolbar_elevation">


            <include layout="@layout/logo_in_toolbar" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="15dp"
                        android:paddingEnd="15dp">

                        <net.umaass_providers.app.utils.CircleImageView
                            android:id="@+id/imgProfile"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/profile" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:paddingStart="10dp"
                                android:text=""
                                android:textColor="@color/colorPrimaryText"
                                android:textSize="19dp"
                                android:textStyle="bold" />

                            <androidx.appcompat.widget.AppCompatRatingBar
                                android:id="@+id/ratingBar"
                                style="@style/Widget.AppCompat.RatingBar.Small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="4dp"
                                android:isIndicator="true"
                                android:progressTint="@color/colorAccent" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center"
                                android:paddingStart="10dp"
                                android:text=""
                                android:textColor="@color/secondaryPrimaryText"
                                android:textSize="14dp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtIntroducer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:paddingStart="10dp"
                                android:textColor="@color/ms_black"
                                android:textSize="14dp"
                                android:visibility="gone"
                                tools:visibility="gone" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="start|center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:textColor="@color/secondaryPrimaryText"
                        android:textSize="12dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:text=""
                        android:textColor="@color/secondaryPrimaryText"
                        android:textSize="16dp" />

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_color"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnComment"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_insert_comment_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/comments"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnWorkingHours"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_assignment_black"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/working_hours"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnServices"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_lamp_black"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/services"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnStaff"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_person_black"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/staff"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp"
                        android:visibility="gone"
                        tools:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnGallery"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_photo_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/gallery"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_suggestion"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawablePadding="10dp"
                        android:drawableStart="@drawable/ic_settings_black_24dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:drawableTint="@color/icon_color"
                        android:paddingStart="20dp"
                        android:text="@string/suggest_appointment"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btn_Introducer_code"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:drawableStart="@drawable/staff"
                        android:drawableTint="@color/icon_color"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/Introducer"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnLanguege"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_language_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/language"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/btnNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:drawablePadding="10dp"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:gravity="start|center"
                            android:paddingStart="20dp"
                            app:drawableTint="@color/icon_color"
                            app:drawableStartCompat="@drawable/notification"
                            android:layout_weight="1"
                            android:text="@string/notifications"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/tvCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/circle_textview_shape"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:layout_marginEnd="16dp"
                            android:textSize="14sp"
                            tools:text="8"
                            app:layout_constraintBottom_toBottomOf="@+id/materialTextView4"
                            app:layout_constraintEnd_toEndOf="@+id/materialTextView4"
                            app:layout_constraintHorizontal_bias="0.27"
                            app:layout_constraintStart_toStartOf="@+id/materialTextView4"
                            app:layout_constraintTop_toTopOf="@+id/materialTextView4" />
                    </LinearLayout>


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnSetting"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_settings_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/edit_profile"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnEditIndustry"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_settings_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/edit_industry"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnLocation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_edit_location_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/edit_location"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnContactUs"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_email_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/contact_us"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnAboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_info_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/about_us"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnShare"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_share_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/share"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:drawableStart="@drawable/ic_exit_to_app_black_24dp"
                        android:drawablePadding="10dp"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="start|center"
                        android:paddingStart="20dp"
                        android:text="@string/log_out"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16dp" />

                </LinearLayout>
            </LinearLayout>


        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

